@using Infrastructure.Models
@model IEnumerable<Infrastructure.Models.EmployeeSalary>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_MetronicLayout.cshtml";
    int rowNumber = 0;
}
 
<div class="content  d-flex flex-column flex-column-fluid" id="kt_content">
    <!--begin::Subheader-->
    <div class="subheader py-2 py-lg-4  subheader-solid " id="kt_subheader">
        <div class=" container-fluid  d-flex align-items-center justify-content-between flex-wrap flex-sm-nowrap">
            <!--begin::Info-->
            <div class="d-flex align-items-center flex-wrap mr-2">

                <!--begin::Page Title-->
                <h5 class="text-dark font-weight-bold mt-2 mb-2 mr-5">
                    List
                </h5>
                <!--end::Page Title-->
                <!--begin::Actions-->
                <div class="subheader-separator subheader-separator-ver mt-2 mb-2 mr-4 bg-gray-200"></div>

                <span class="text-muted font-weight-bold mr-4">Employee Salary</span>

                @*<a href="#" class="btn btn-light-warning font-weight-bolder btn-sm">
                        Add New
                    </a>*@
                <!--end::Actions-->
            </div>
            <!--end::Info-->
            <!--begin::Toolbar-->
            <div class="d-flex align-items-center">
                <!--begin::Actions-->
                <a href="#" class=" btn-sm font-weight-bold font-size-base mr-1">
                    @DateTime.Today.ToLongDateString()
                </a>
                <!--end::Actions-->

            </div>
            <!--end::Toolbar-->
        </div>
    </div>
    
    <div class="card card-custom">
    <div class="card-header flex-wrap border-0 pt-6 pb-0">
        <div class="card-title">
            <h3 class="card-label">
                Employee Salary List
                <span class="d-block text-muted pt-2 font-size-sm">Currently Active Employee Salary</span>
            </h3>
        </div>
        <div class="card-toolbar">
            <!--begin::Button-->
            <a asp-action="Create" asp-controller="EmployeeSalaries" class="btn btn-primary font-weight-bolder">
                <span class="svg-icon svg-icon-md">
                    <!--begin::Svg Icon | path:assets/media/svg/icons/Design/Flatten.svg-->
                    <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" width="24px" height="24px" viewBox="0 0 24 24" version="1.1">
                        <g stroke="none" stroke-width="1" fill="none" fill-rule="evenodd">
                            <rect x="0" y="0" width="24" height="24" />
                            <circle fill="#000000" cx="9" cy="15" r="6" />
                            <path d="M8.8012943,7.00241953 C9.83837775,5.20768121 11.7781543,4 14,4 C17.3137085,4 20,6.6862915 20,10 C20,12.2218457 18.7923188,14.1616223 16.9975805,15.1987057 C16.9991904,15.1326658 17,15.0664274 17,15 C17,10.581722 13.418278,7 9,7 C8.93357256,7 8.86733422,7.00080962 8.8012943,7.00241953 Z" fill="#000000" opacity="0.3" />
                        </g>
                    </svg>
                    <!--end::Svg Icon-->
                </span>	New Salary
            </a>
            <!--end::Button-->
        </div>
    </div>
    <div class="card-body">
        <!--begin: Search Form-->
        <!--begin::Search Form-->
        <div class="mb-7">
            <div class="row align-items-center">
                <div class="col-lg-9 col-xl-8">
                    <div class="row align-items-center">
                        <div class="col-md-4 my-2 my-md-0">
                            <div class="input-icon">
                                <input type="text" class="form-control" placeholder="Search..." id="kt_datatable_search_query" />
                                <span><i class="flaticon2-search-1 text-muted"></i></span>
                            </div>
                        </div>

                        <a href="#" class="btn btn-light-primary px-6 font-weight-bold">
                            Search
                        </a>
                    </div>
                </div>

            </div>
        </div>
        <!--end::Search Form-->
        <!--end: Search Form-->
        <!--begin: Datatable-->
        <table class="datatable datatable-bordered datatable-head-bg" id="kt_datatable">
            <thead>
            <tr>
                <th>#</th>
                <th title="Field #1">Employee ID</th>
                <th title="Field #2">Full Name</th>
                <th title="Field #3">Basic Salary</th>
                <th title="Field #4">Transport Allowance</th>
                <th title="Field #4">Home Allowance</th>
                <th title="Field #4">Other Allowance</th>
                <th title="Field #5">Active Date</th>
                <th title="Field #7">Actions</th>
            </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    rowNumber++;
                    <tr>
                        <td>@rowNumber</td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Employee.EmployeeId)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Employee.FirstName) @Html.DisplayFor(modelItem => item.Employee.MiddleName) @Html.DisplayFor(modelItem => item.Employee.LastName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.BasicSalary)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.TransportAllowance)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.HomeAllowance)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.OtherAllowance)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CreationTime)
                        </td>
                        <td>
                            @if (item.SalaryStatus == SalaryStatus.Active)
                            {
                                <a class="btn btn-outline-danger" asp-action="Edit" title="De-Activate" asp-route-id="@item.Id">De-Activate Salary</a>
                            }
                            else
                            {
                                <a class="btn btn-outline-success" asp-action="NewSalary" title="New Salary" asp-route-id="@item.Id">New Salary</a>
                            }

                        </td>
                    </tr>    
                }
                
            </tbody>
        </table>
        <!--end: Datatable-->
    </div>
</div>
</div>
