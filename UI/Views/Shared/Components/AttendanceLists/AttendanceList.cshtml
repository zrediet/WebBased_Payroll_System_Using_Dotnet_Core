@using Microsoft.AspNetCore.Mvc.Rendering
@using Infrastructure.Models
@model List<Infrastructure.Models.Attendance>
@{
    int rowNumber = 0;
    Layout = "_StarAdminLayout";
}

@if (Model.Any())
{
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Attendances List</h4>

            <div class="table-responsive pt-3">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Full Name</th>
                            <th>Attendance Type</th>
                            <th>Creation Date</th>
                            <th>Month</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            rowNumber++;
                            <tr>
                                <td>
                                    @rowNumber
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Employee.FirstName) @Html.DisplayFor(modelItem => item.Employee.MiddleName) @Html.DisplayFor(modelItem => item.Employee.LastName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.AttendanceType)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CreationTime)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Date.Month)
                                </td>
                                <td>
                                    <a class="btn btn-warning btn-sm" type="button" asp-action="Edit" asp-route-id="item.Id" title="Edit">Edit</a>
                                    <a class="btn btn-danger btn-sm" type="button" asp-action="Delete" asp-route-id="item.Id" title="Delete">Delete</a>
                                </td>
                            </tr>

                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
}
else
{
    <p>No Record Found!</p>
}