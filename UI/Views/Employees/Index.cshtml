@model IEnumerable<Infrastructure.Models.Employee>
@*@model IEnumerable<Payroll.Models.EmployeeRegistrationViewModel>*@

@{
    ViewData["Title"] = "Index";
    Layout = "_StarAdminLayout";
    int rowNumber = 0;
}
 
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Employee List</h4>
            <p class="card-description">
                <a asp-action="Create" asp-controller="Employees" class="btn btn-primary btn-rounded btn-icon"> New Employee </a>
            </p>
            
            <div class="table-responsive pt-3">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                #
                            </th>
                            <th>
                                Full Name
                            </th>
                            <th>
                                Gender
                            </th>
                            <th>
                                Phone
                            </th>
                            <th>
                                Employment Type
                            </th>
                            <th>
                                Creation Date
                            </th>
                            <th>
                                Actions
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            rowNumber++;
                            <tr>
                                <td>@rowNumber</td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FirstName) @Html.DisplayFor(modelItem => item.MiddleName) @Html.DisplayFor(modelItem => item.LastName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Gender)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PhoneNo)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.EmploymentType)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CreationTime)
                                </td>
                                <td>
                                    @*<a class="btn flaticon-edit text-warning" asp-action="Edit" asp-route-id="item.Id" title="Edit"></a>
                                    <a class="btn flaticon-price-tag text-success" asp-controller="EmployeeSalaries" asp-action="Index" title="Change Salary"></a>
                                    <a class="btn flaticon-list-1 text-info" asp-action="Details" asp-route-id="item.Id" title="Detail"></a>
                                    <a class="btn flaticon-delete text-danger" asp-action="Delete" asp-route-id="item.Id" title="Delete"></a>*@

                                    <a class="btn btn-warning btn-sm" type="button" title="Edit" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                                    <a class="btn btn-success btn-sm" type="button" title="Change Salary" asp-controller="EmployeeSalaries" asp-action="Index">Change Salary</a>
                                    <a class="btn btn-info btn-sm" type="button" title="Detail" asp-action="Details" asp-route-id="@item.Id">Detail</a>
                                    <a class="btn btn-danger btn-sm" type="button" title="Delete" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                </td>
                            </tr>



                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>