
@model Infrastructure.Models.Employee
@using Infrastructure.Models


@{
    ViewData["Title"] = "Edit";
    Layout = "_StarAdminLayout";
}
  
<div class="content" d-flex flex-column flex-column-fluid id="kt_content">
    <div class="card card-custom card-sticky" id="kt_page_sticky_card">
        <div class="card-body">
            <!--begin::Form-->
            <form class="form" id="kt_form" asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-dark"></div>
                <div class="row">
                    @*@Html.Hidden("Employee.EmployeeId", (object)ViewBag.EmpId)*@
                    <input type="hidden" asp-for="Id" />
                    <div class="col-xl-2"></div>
                    <div class="col-xl-8">
                        <div class="my-5">
                            <h3 class=" text-dark font-weight-bold mb-10">Employee Info:</h3>
                            <div class="form-group row">
                                <label class="col-3">Employee ID</label>
                                <div class="col-9">
                                    <input class="form-control form-control-solid" asp-for="EmployeeId" readonly />
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-3">First Name</label>
                                <div class="col-9">
                                    <input type="text" asp-for="FirstName" class="form-control form-control-solid" placeholder="First Name" />
                                    <span asp-validation-for="FirstName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-3">Middle Name</label>
                                <div class="col-9">
                                    <input type="text" asp-for="MiddleName" class="form-control form-control-solid" placeholder="Middle Name" />
                                    <span asp-validation-for="MiddleName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-3">Last Name</label>
                                <div class="col-9">
                                    <input type="text" asp-for="LastName" class="form-control form-control-solid" placeholder="Last Name" />
                                    <span asp-validation-for="LastName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-3">Gender</label>
                                <div class="col-9">
                                    <select type="text" class="form-control form-control-solid" asp-for="Gender" asp-items="Html.GetEnumSelectList<Gender>()" id="gender" required>
                                        <option>-- Select Gender --</option>
                                    </select>
                                    <span asp-validation-for="Gender" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-3">Contact Phone</label>
                                <div class="col-9">
                                    <div class="input-group input-group-solid">
                                        <input type="text" asp-for="PhoneNo" class="form-control form-control-solid" placeholder="+251" />
                                        <span asp-validation-for="PhoneNo" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-3">City/Town</label>
                                <div class="col-9">
                                    <input type="text" asp-for="City" class="form-control form-control-solid" placeholder="City" />
                                    <span asp-validation-for="City" class="text-danger"></span>
                                </div>

                            </div>
                            <div class="form-group row">
                                <label class="col-3">Sub-City</label>
                                <div class="col-9">
                                    <input type="text" asp-for="SubCity" class="form-control form-control-solid"  placeholder="Sub-City" />
                                    <span asp-validation-for="SubCity" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-3">Region</label>
                                <div class="col-9">
                                    <input type="text" asp-for="Region" class="form-control form-control-solid" placeholder="Region" />
                                    <span asp-validation-for="Region" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="separator separator-dashed my-10"></div>
                        <div class="my-5">
                            <h3 class=" text-dark font-weight-bold mb-10">Employment Details:</h3>

                            <div class="form-group row">
                                <label class="col-3">Hire Date</label>
                                <div class="col-9">
                                    <input type="text" asp-for="HireDate" class="form-control form-control-solid" readonly/>
                                    <span asp-validation-for="HireDate" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-3">Employment Type</label>
                                <div class="col-9">
                                    <select type="text" class="form-control form-control-solid" asp-for="EmploymentType" asp-items="Html.GetEnumSelectList<EmploymentType>()" id="EmploymentType" required>
                                        <option>-- Select Employment Type --</option>
                                    </select>
                                    <span asp-validation-for="EmploymentType" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-3">Payment Period</label>
                                <div class="col-9">
                                    <select type="text" class="form-control form-control-solid" asp-for="PaymentPeriod" asp-items="Html.GetEnumSelectList<PaymentPeriod>()" id="paymentPeriod" required>
                                        <option> -- Select Payment Period --</option>
                                    </select>
                                    <span asp-validation-for="PaymentPeriod" class="text-danger"></span>
                                </div>
                            </div>

                        </div>
                        <div class="separator separator-dashed my-10"></div>
                        <div class="separator separator-dashed my-10"></div>

                        <div class="separator separator-dashed my-10"></div>
                        <div class="my-52">
                            <h3 class=" text-dark font-weight-bold mb-10">Account Info.:</h3>
                            <div class="form-group row">
                                <label class="col-3">Bank Account #</label>
                                <div class="col-9">
                                    <div class="input-group input-group-solid">
                                        <input type="text" asp-for="BankAccount" class="form-control form-control-solid" placeholder="Account Number" required="true" />
                                        <span asp-validation-for="BankAccount" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group row mt-10">
                                <label class="col-3"></label>
                                <div class="col-9">
                                    <button type="submit" class="btn btn-warning font-weight-bold btn-sm">Update Employee</button>
                                </div>
                            </div>
                        </div>


                        <div class="col-xl-2"></div>
                    </div>
                </div>
            </form>
            <!--end::Form-->
        </div>
    </div>
</div>


 