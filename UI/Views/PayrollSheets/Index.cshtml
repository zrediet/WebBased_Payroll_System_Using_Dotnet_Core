@model IEnumerable<Infrastructure.Models.PayrollSheet>

@{
    ViewData["Title"] = "Index";
    Layout = "_StarAdminLayout";
    int rowNumber = 0;
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Payroll Sheet</h4>
            <p class="card-description">
                <a asp-action="Create" asp-controller="PayrollSheets" class="btn btn-primary btn-sm">
                    New Payroll
                </a>
            </p>
            <div class="table-responsive pt-3">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>From</th>
                            <th>To</th>
                            <th>Basic Salary</th>
                            <th>Allowance</th>
                            <th>Overtime</th>
                            <th>Gross Salary</th>
                            <th>Income Tax</th>
                            <th>Pension Emp</th>
                            <th>Pension Comp.</th>
                            <th>Loan</th>
                            <th>Penalty</th>
                            <th>Other Deduction</th>
                            <th>Net Pay</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            rowNumber++;
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Employee.FirstName) @Html.DisplayFor(modelItem => item.Employee.MiddleName) @Html.DisplayFor(modelItem => item.Employee.LastName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PayStart)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PayEnd)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.BasicSalary)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Allowance)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.OverTime)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.GrossSalary)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.IncomeTax)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PensionEmployee)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PensionCompany)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Loan)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Penality)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.OtherDeduction)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NetPay)
                                </td>
                                <td>
                                    <button type="button" class="btn btn-success btn-rounded btn-icon btn-sm" title="Details" asp-action="Details" asp-route-id="@item.Id">
                                        <i class="ti-view-list"></i>
                                    </button>
                                </td>
                                <td>
                                </td>
                            </tr>

                        }

                    </tbody>
                </table>
            </div>

            <!--end: Datatable-->
        </div>
    </div>
</div>


