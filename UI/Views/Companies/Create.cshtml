@model Infrastructure.Models.Company

@{
    ViewData["Title"] = "Create";
    Layout = "_StarAdminLayout";
}
 

<div class="col-md-12 grid-margin stretch-card">
   
    <div class="card">
        <form class="form" asp-action="Create">
            <div class="card-body">
                <div class="card-description">
                    <span class="text-dark font-weight-bold mr-4">New Company Information</span>
                </div>
                <div class="row col-sm-8">
                    <div class="form-group">
                        <label>Company Name:</label>
                        <input type="text" asp-for="CompanyName" class="form-control" placeholder="Company Name" />
                        <span class="form-text text-muted">Please enter company name</span>
                        <span asp-validation-for="CompanyName" class="text-danger"></span>
                    </div>
                </div>
                
                <div class="row">
                    <div class="col col-sm-4">
                        <div class="form-group">
                            <label>Phone #:</label>
                            <input type="tel" asp-for="CompanyPhone" class="form-control" placeholder="Enter Phone number" />
                            <span class="form-text text-muted">Please enter phone number</span>
                            <span asp-validation-for="CompanyPhone" class="text-danger"></span>

                        </div>
                    </div>
                    <div class="col col-sm-4">
                        <div class="form-group">
                            <label>Email:</label>
                            <input type="email" asp-for="Email" class="form-control" placeholder="Enter Email" />
                            <span class="form-text text-muted">Please enter email address</span>
                            <span asp-validation-for="Email" class="text-danger"></span>

                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col col-sm-4">
                        <div class="form-group">
                            <label>Website:</label>
                            <input type="url" asp-for="Website" class="form-control" placeholder="Enter Website" />
                            <span class="form-text text-muted">Please enter website</span>
                            <span asp-validation-for="Website" class="text-danger"></span>

                        </div>
                    </div>
                    <div class="col col-sm-4">
                        <div class="form-group">
                            <label>Fax #:</label>
                            <input type="tel" asp-for="Fax" class="form-control" placeholder="Enter Fax" />
                            <span class="form-text text-muted">Please enter fax</span>
                            <span asp-validation-for="Fax" class="text-danger"></span>
                        </div>
                    </div>

                </div>
                <div class="row">
                    <div class="col col-sm-4">
                        <div class="form-group">
                            <label>Location:</label>
                            <input type="tel" asp-for="Location" class="form-control" placeholder="Enter Location" />
                            <span class="form-text text-muted">Please enter location</span>
                            <span asp-validation-for="Location" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col col-sm-6">
                        <div class="form-group">
                            <label>Description:</label>
                            <input type="text" asp-for="CompanyDescription" class="form-control" placeholder="Description" rows="4"/>
                            <span class="form-text text-muted">Please enter description</span>
                            <span asp-validation-for="CompanyDescription" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="card-footer">
                <button type="submit" class="btn btn-primary mr-2">Submit</button>
                <button asp-action="Index" asp-controller="Companies" class="btn btn-secondary">Back To List</button>
            </div>
        </form>
    </div>
    
</div>

 
 