@model IEnumerable<Infrastructure.Models.PayrollSetting>

@{
    ViewData["Title"] = "Index";
    Layout = "_StarAdminLayout";
    int rowNumber = 0;
}
 


<div class="content  d-flex flex-column flex-column-fluid" id="kt_content">
    <!--begin::Subheader-->
    <div class="subheader py-2 py-lg-4  subheader-solid " id="kt_subheader">
        <div class=" container-fluid  d-flex align-items-center justify-content-between flex-wrap flex-sm-nowrap">
            <!--begin::Info-->
            <div class="d-flex align-items-center flex-wrap mr-2">

                <!--begin::Page Title-->
                 
                <!--end::Page Title-->
                <!--begin::Actions-->
                <div class="subheader-separator subheader-separator-ver mt-2 mb-2 mr-4 bg-gray-200"></div>
                 
                @*<a href="#" class="btn btn-light-warning font-weight-bolder btn-sm">
                        Add New
                    </a>*@
                <!--end::Actions-->
            </div>
            <!--end::Info-->
            <!--begin::Toolbar-->
            <div class="d-flex align-items-center">
                <!--begin::Actions-->
                <a href="#" class=" btn-sm font-weight-bold font-size-base mr-1">
                    @DateTime.Today.ToLongDateString()
                </a>
                <!--end::Actions-->

            </div>
            <!--end::Toolbar-->
        </div>
    </div>
    
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Currently Active Payroll Settings</h4>
                <p class="card-description">
                    <a asp-action="Create" asp-controller="PayrollSettings" class="btn btn-primary btn-rounded btn-icon"> Payroll Setting </a>
                </p>
                <div class="table-responsive pt-3">

                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th title="Field #1">#</th>
                                <th title="Field #2">Setting Name</th>
                                <th title="Field #3">Value</th>
                                <th title="Field #4">Creation Date</th>
                                <th title="Field #5">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                rowNumber++;
                                <tr>
                                    <td>@rowNumber</td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.GeneralPSett)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Value)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CreationTime)
                                    </td>
                                    <td>
                                        <a class="btn flaticon-edit text-warning" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                                        <a class="btn flaticon-list-1 text-info" asp-action="Details" asp-route-id="@item.Id">Detail</a>
                                        <a class="btn flaticon-delete text-danger" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                    </td>
                                    <td>
                                    </td>
                                </tr>

                            } 

                        </tbody>
                    </table>
                </div>

                <!--end: Datatable-->
            </div>
        </div>
    </div>
    
</div>
<!--begin::Card-->

 