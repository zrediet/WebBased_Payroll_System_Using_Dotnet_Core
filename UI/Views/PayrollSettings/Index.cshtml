@model IEnumerable<Infrastructure.Models.PayrollSetting>

@{
    ViewData["Title"] = "Index";
    Layout = "_StarAdminLayout";
    int rowNumber = 0;
}



<!--<div class="content  d-flex flex-column flex-column-fluid" id="kt_content">-->
    <!--begin::Subheader-->
    

    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Currently Active Payroll Settings</h4>
                <p class="card-description">
                    <a asp-action="Create" asp-controller="PayrollSettings" class="btn btn-primary btn-rounded btn-icon"> Payroll Setting </a>
                </p>
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Setting Name</th>
                                <th>Value</th>
                                <th>Creation Date</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                rowNumber++;
                                <tr>
                                    <td>@rowNumber</td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.GeneralPSett)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Value)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CreationTime)
                                    </td>
                                    <td>
                                        <a class="btn btn-warning btn-sm" type="button" title="Edit" asp-action="Edit"  asp-route-id="@item.Id">Edit</a>
                                        <a class="btn btn-info btn-sm" type="button" title="Detail" asp-action="Details" asp-route-id="@item.Id">Detail</a>
                                        <a class="btn btn-danger btn-sm" type="button" title="Delete" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                                    </td>
                                </tr>

                            }

                        </tbody>
                    </table>
                </div>

                <!--end: Datatable-->
            </div>
        </div>
    </div>

@*</div>*@
<!--begin::Card-->
