@using Infrastructure.Models
@model IEnumerable<Infrastructure.Models.Attendance>

@{
    ViewData["Title"] = "Index";
    Layout = "_StarAdminLayout";
    int rowNumber = 0;
}

 
<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Attendances List</h4>
            <p class="card-description">
                <a asp-action="Create" asp-controller="Attendances" class="btn btn-primary btn-rounded btn-icon"> New Attendance </a>
            </p>

            <div class="table-responsive pt-3">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>
                                #
                            </th>
                            <th>
                                Full Name
                            </th>
                            <th>
                                Attendance Type
                            </th>
                            <th>
                                Creation Date
                            </th>
                            <th>
                                Date
                            </th>
                            <th>
                                Actions
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            rowNumber++;
                        <tr>
                            <td>
                                @rowNumber
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Employee.FirstName) @Html.DisplayFor(modelItem => item.Employee.MiddleName) @Html.DisplayFor(modelItem => item.Employee.LastName)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.AttendanceType)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.CreationTime)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Date)
                            </td>
                            <td>
                                <a class="btn btn-warning btn-sm" type="button" asp-action="Edit" asp-route-id="item.Id" title="Edit">Edit</a>
                                <a class="btn btn-danger btn-sm" type="button" asp-action="Delete" asp-route-id="item.Id" title="Delete">Delete</a>
                            </td>
                        </tr> 
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>